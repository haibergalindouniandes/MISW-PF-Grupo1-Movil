<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGrey"
        android:textSize="30sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/entrenamiento_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/header">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_entre_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:text="@string/entrenamiento_del_dia"/>
            <TextView
                android:id="@+id/distance_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_entre_day"
                />
            <Button
                android:id="@+id/entrenamiento"
                android:text="@string/registrar"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/distance_day_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alimentacion_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/header"
        android:layout_toEndOf="@+id/entrenamiento_card">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_ali_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:text="@string/entrenamiento_del_dia"/>
            <TextView
                android:id="@+id/calories_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_ali_day"
                />
            <Button
                android:id="@+id/alimentacion"
                android:text="@string/registrar"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/calories_day_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eventos_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/entrenamiento_card">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_sugerencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="@string/eventos_cerca_de_ti"/>
            <TextView
                android:id="@+id/event_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:text="Nombre del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_sugerencias"
                />
            <TextView
                android:id="@+id/event_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:text="Fecha del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/event_name_text"
                />
            <TextView
                android:id="@+id/event_cost_text"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="Costo del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/event_day_text"
                />
            <Button
                android:id="@+id/sugerencias"
                android:text="@string/ver_mas"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/event_cost_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mis_eventos_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/eventos_card">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_eventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:text="Tus proximos eventos"/>
            <TextView
                android:id="@+id/my_event_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:text="Nombre del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_eventos"
                />
            <TextView
                android:id="@+id/my_event_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:text="Fecha del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/my_event_name_text"
                />
            <TextView
                android:id="@+id/my_event_cost_text"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="Costo del Evento"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/my_event_day_text"
                />
            <Button
                android:id="@+id/tus_eventos"
                android:text="@string/ver_mas"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/my_event_cost_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/plan_entrenamiento_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/mis_eventos_card">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_plan_entre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:text="@string/plan_de_entrenamiento"/>
            <TextView
                android:id="@+id/plan_entre_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/lightGrey"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_plan_entre"
                />
            <Button
                android:id="@+id/plan_entrenamiento"
                android:text="@string/ver_mas"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/plan_entre_duration_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/plan_alimentacion_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:strokeColor="@color/lightGrey"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="2dp"
        android:layout_below="@+id/mis_eventos_card"
        android:layout_toEndOf="@+id/plan_entrenamiento_card">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title_plan_ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"

                android:layout_marginTop="5dp"
                android:text="@string/plan_de_alimentacion"/>
            <TextView
                android:id="@+id/plan_ali_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title_plan_ali"
                />
            <Button
                android:id="@+id/plan_alimentacion"
                android:text="@string/ver_mas"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/plan_ali_duration_text"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>