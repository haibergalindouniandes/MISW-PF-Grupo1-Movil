<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Monitoreo_Fragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/lightGrey"
        android:layout_marginEnd="10dp"
        android:text="@string/monitoreo_de_actividad"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/lightGrey"
        android:layout_height="wrap_content"
        android:layout_above="@id/goal"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginBottom="40dip"
        android:text="@string/distancia" />

    <TextView
        android:id="@+id/goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/textTimer"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/lightGrey"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="70dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Chronometer
        android:id="@+id/textTimer"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/lightGrey"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/monitoreoBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="18dp"
        android:layout_below="@id/textTimer"
        android:layout_centerHorizontal="true"
        android:text="@string/empezar"
        android:textAllCaps="false"
        android:backgroundTint="@color/ButtonBlue"
        android:textSize="20sp" />

    <Button
        android:id = "@+id/alertaBtn"
        android:textSize = "18sp"
        android:text="@string/alerta"
        android:layout_below="@id/textTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:textAlignment = "center"
        app:cornerRadius="65dp"
        android:backgroundTint="@color/ButtonRed"
        android:layout_width = "130dp"
        android:textColor = "#000"
        android:layout_height = "130dp" />

    <Button
        android:id="@+id/terminarBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="18dp"
        android:layout_below="@id/alertaBtn"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="@string/terminar"
        android:textAllCaps="false"
        android:backgroundTint="@color/duskYellow"
        android:textSize="20sp" />



</RelativeLayout>