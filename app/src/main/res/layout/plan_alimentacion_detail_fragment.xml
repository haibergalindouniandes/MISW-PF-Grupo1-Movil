<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PlanAlimentacionDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/lightGrey"
            android:layout_marginEnd="10dp"
            android:text="@string/detalle_de_plan_de_alimentacion"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/lunes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/lunes" />

            <TextView
                android:id="@+id/lunes_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/martes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lunes"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/martes" />

            <TextView
                android:id="@+id/martes_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/miercoles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/martes"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/miercoles" />

            <TextView
                android:id="@+id/miercoles_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jueves"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/miercoles"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/jueves" />

            <TextView
                android:id="@+id/jueves_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viernes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jueves"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/viernes" />

            <TextView
                android:id="@+id/viernes_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sabado"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viernes"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/sabado" />

            <TextView
                android:id="@+id/sabado_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/domingo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sabado"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/domingo" />

            <TextView
                android:id="@+id/domingo_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/semanas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/domingo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dip"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGrey"
                android:text="@string/numero_de_semanas" />

            <TextView
                android:id="@+id/semanas_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/lightGrey"/>
        </LinearLayout>


        <Button
            android:id="@+id/crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/semanas"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="@string/crear_nuevo_plan"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>